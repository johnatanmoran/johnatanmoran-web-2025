{
	"collectionName": "proyectos",
	"info": {
		"singularName": "proyecto",
		"pluralName": "proyectos",
		"displayName": "Proyecto"
	},
	"options": {
		"draftAndPublish": true
	},
	"attributes": {
		"titulo": {
			"type": "string",
			"required": true,
			"pluginOptions": {
				"i18n": {
					"localized": true
				}
			}
		},
		"slug": {
			"type": "uid",
			"targetField": "titulo",
			"pluginOptions": {
				"i18n": {
					"localized": true
				}
			}
		},
		"descripcion": {
			"type": "richtext",
			"pluginOptions": {
				"i18n": {
					"localized": true
				}
			}
		},
		"detalles": {
			"type": "richtext",
			"pluginOptions": {
				"i18n": {
					"localized": true
				}
			}
		},
		"imagen_destacada": {
			"type": "media"
		},
		"galeria": {
			"type": "media",
			"multiple": true
		},
		"tecnologias": {
			"type": "component",
			"repeatable": true,
			"component": "global.tecnologia"
		},
		"categoria": {
			"type": "relation",
			"relation": "manyToOne",
			"target": "api::categoria.categoria"
		},
		"tags": {
			"type": "relation",
			"relation": "manyToMany",
			"target": "api::etiqueta.etiqueta"
		},
		"fecha": {
			"type": "date"
		},
		"enlace": {
			"type": "string"
		},
		"repositorio": {
			"type": "string"
		},
		"destacado": {
			"type": "boolean",
			"default": false
		},
		"area": {
			"type": "enumeration",
			"enum": [
				"design",
				"development",
				"both"
			],
			"default": "both"
		}
	}
}